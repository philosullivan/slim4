{
    "name": "philosullivan/slim4",
    "type": "project",
    "description": "",
    "authors": [
        {
            "name": "Phil O'Sullivan",
            "email": "phil.osullivan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "monolog/monolog": "^3.3",
        "php-di/php-di": "^7.0",
        "selective/database": "^3.2",
        "slim/csrf": "^1.3",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3",
        "symfony/translation": "^6.2",
        "symfony/twig-bridge": "^6.2",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/",
            "App\\Models\\": "app/src/models",
            "App\\Common\\": "app/src/common"
        },
        "files": [
            "app/src/common/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
